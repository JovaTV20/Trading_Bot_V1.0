{
  "strategy": {
    "name": "intelligent_ml_strategy",
    "parameters": {
      "lookback_period": 50,
      "prediction_threshold": 0.65,
      "min_confidence": 0.6,
      "regime_window": 100,
      "online_learning_window": 200,
      "retrain_frequency": 20,
      "train_test_split": 0.8,
      "rebalance_frequency": "daily",
      "model_type": "ensemble",
      "features": {
        "returns": true,
        "moving_averages": [10, 20, 50],
        "ema_periods": [10, 20, 50],
        "rsi": true,
        "bollinger_bands": true,
        "momentum": true,
        "volume": true,
        "volatility_adaptive": true,
        "regime_features": true,
        "price_volume_divergence": true
      },
      "target_settings": {
        "volatility_multiplier": 1.5,
        "min_return_threshold": 0.015,
        "multi_horizon_weights": [0.5, 0.3, 0.2],
        "forward_periods": [1, 3, 5]
      },
      "ensemble_settings": {
        "main_model_weight": 0.5,
        "online_model_weight": 0.3,
        "regime_model_weight": 0.2,
        "confidence_threshold": 0.65
      }
    }
  },
  "risk_management": {
    "max_position_size": 0.15,
    "stop_loss_pct": 0.025,
    "take_profit_pct": 0.05,
    "max_daily_trades": 3,
    "max_drawdown_pct": 0.12,
    "position_sizing": {
      "confidence_based": true,
      "volatility_adjusted": true,
      "regime_adjusted": true,
      "base_size": 0.1,
      "max_size_multiplier": 1.5,
      "min_size_multiplier": 0.5
    },
    "regime_adjustments": {
      "bull_multiplier": 1.1,
      "bear_multiplier": 0.8,
      "sideways_multiplier": 0.9,
      "high_vol_multiplier": 0.8
    }
  },
  "execution": {
    "order_type": "market",
    "time_in_force": "day",
    "fractional_shares": true,
    "slippage_buffer": 0.001,
    "order_validation": true
  },
  "backtest": {
    "commission": 0.0,
    "slippage": 0.001,
    "initial_capital": 10000.0,
    "benchmark_symbol": "SPY",
    "performance_metrics": [
      "total_return",
      "sharpe_ratio",
      "max_drawdown",
      "win_rate",
      "profit_factor",
      "calmar_ratio"
    ]
  },
  "live_trading": {
    "update_interval": 60,
    "market_hours_only": true,
    "paper_trading": true,
    "regime_check_frequency": 300,
    "online_learning_enabled": true,
    "performance_monitoring": true
  },
  "alerts": {
    "email_on_trade": true,
    "email_on_error": true,
    "email_daily_summary": true,
    "email_regime_change": true,
    "email_performance_alerts": true,
    "alert_thresholds": {
      "drawdown_warning": 0.05,
      "drawdown_critical": 0.08,
      "low_confidence_warning": 0.4
    }
  },
  "data": {
    "timeframe": "1Day",
    "adjustment": "raw",
    "limit": 2000,
    "data_quality_checks": true,
    "outlier_detection": true,
    "min_data_points": 100
  },
  "ml_settings": {
    "feature_selection": {
      "enabled": true,
      "max_features": 15,
      "selection_method": "variance_stability"
    },
    "model_validation": {
      "cross_validation_folds": 3,
      "validation_metric": "accuracy",
      "overfitting_threshold": 0.15
    },
    "online_learning": {
      "enabled": true,
      "buffer_size": 200,
      "retrain_threshold": 20,
      "performance_decay_factor": 0.95
    },
    "ensemble_settings": {
      "voting_method": "weighted_confidence",
      "model_performance_window": 50,
      "adaptive_weights": true
    }
  },
  "logging": {
    "level": "INFO",
    "log_predictions": true,
    "log_regime_changes": true,
    "log_performance_metrics": true,
    "log_online_learning": true
  },
  "persistence": {
    "save_models": true,
    "model_save_frequency": "daily",
    "backup_old_models": true,
    "max_model_backups": 5
  }
}