# TradingBot Makefile
# Vereinfacht hÃ¤ufige Entwicklungs- und Deployment-Aufgaben

.PHONY: help setup install validate test backtest live dashboard clean logs docker

# Default target
help:
	@echo "ğŸ¤– TradingBot - VerfÃ¼gbare Kommandos:"
	@echo ""
	@echo "Setup & Installation:"
	@echo "  make setup        - Komplette Ersteinrichtung"
	@echo "  make install      - Dependencies installieren"
	@echo "  make validate     - Setup validieren"
	@echo ""
	@echo "Trading:"
	@echo "  make backtest     - Backtest mit Standard-Parametern"
	@echo "  make live         - Live-Trading starten (Paper)"
	@echo "  make dashboard    - Web-Dashboard starten"
	@echo ""
	@echo "Development:"
	@echo "  make test         - Tests ausfÃ¼hren"
	@echo "  make clean        - TemporÃ¤re Dateien lÃ¶schen"
	@echo "  make logs         - Logs anzeigen"
	@echo ""
	@echo "Docker:"
	@echo "  make docker-build - Docker Image bauen"
	@echo "  make docker-run   - Docker Container starten"

# Setup & Installation
setup: install validate
	@echo "âœ… Setup abgeschlossen!"

install:
	@echo "ğŸ“¦ Installiere Dependencies..."
	pip install -r requirements.txt
	@if [ ! -f .env ]; then \
		echo "ğŸ“ Erstelle .env aus Template..."; \
		cp .env.template .env; \
		echo "âš ï¸  WICHTIG: Bearbeite .env mit deinen API-Keys!"; \
	fi
	@mkdir -p logs data models
	@echo "âœ… Installation abgeschlossen!"

validate:
	@echo "ğŸ” Validiere Setup..."
	python run_validation.py

# Trading Operations
backtest:
	@echo "ğŸ“Š Starte Backtest..."
	python main.py --mode backtest --symbol AAPL --start-date 2023-01-01 --end-date 2024-01-01 --capital 10000

backtest-custom:
	@read -p "Symbol [AAPL]: " symbol; \
	read -p "Startdatum [2023-01-01]: " start; \
	read -p "Enddatum [2024-01-01]: " end; \
	read -p "Startkapital [10000]: " capital; \
	python main.py --mode backtest \
		--symbol $${symbol:-AAPL} \
		--start-date $${start:-2023-01-01} \
		--end-date $${end:-2024-01-01} \
		--capital $${capital:-10000}

live:
	@echo "ğŸš€ Starte Live-Trading (Paper Mode)..."
	@echo "âš ï¸  WICHTIG: Stelle sicher, dass ALPACA_BASE_URL auf paper-api zeigt!"
	python main.py --mode live --symbol AAPL

dashboard:
	@echo "ğŸŒ Starte Web-Dashboard..."
	cd dashboard && python app.py

# Development
test:
	@echo "ğŸ§ª FÃ¼hre Tests aus..."
	@if command -v pytest > /dev/null; then \
		pytest tests/ -v --cov=core --cov=strategies --cov=utils; \
	else \
		echo "âš ï¸  pytest nicht installiert. Installiere Development-Dependencies:"; \
		echo "   pip install pytest pytest-cov"; \
	fi

test-quick:
	@echo "âš¡ Quick Tests..."
	python -c "from utils.validator import quick_validate_config; print('Config OK' if quick_validate_config() else 'Config ERROR')"
	python -c "from data_providers.alpaca_data import AlpacaDataProvider; print('Alpaca OK' if AlpacaDataProvider({}).test_connection() else 'Alpaca ERROR')"

# Maintenance
clean:
	@echo "ğŸ§¹ RÃ¤ume auf..."
	find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	find . -type f -name "*.pyc" -delete 2>/dev/null || true
	find . -type f -name "*.pyo" -delete 2>/dev/null || true
	find . -type d -name "*.egg-info" -exec rm -rf {} + 2>/dev/null || true
	rm -rf build/ dist/ .coverage htmlcov/ .pytest_cache/
	@echo "âœ… AufgerÃ¤umt!"

clean-logs:
	@echo "ğŸ—‘ï¸ LÃ¶sche alte Logs..."
	python -c "from core.logger import cleanup_old_logs; cleanup_old_logs(days=30)"
	@echo "âœ… Logs bereinigt!"

logs:
	@echo "ğŸ“‹ Aktuelle Logs:"
	@if [ -f logs/bot.log ]; then \
		echo "=== Bot Log (letzte 20 Zeilen) ==="; \
		tail -n 20 logs/bot.log; \
		echo ""; \
	fi
	@if [ -f logs/trades.log ]; then \
		echo "=== Trade Log (letzte 10 Zeilen) ==="; \
		tail -n 10 logs/trades.log; \
		echo ""; \
	fi
	@if [ -f logs/errors.log ]; then \
		echo "=== Error Log (letzte 5 Zeilen) ==="; \
		tail -n 5 logs/errors.log; \
	fi

logs-follow:
	@echo "ğŸ‘€ Live Logs (Strg+C zum Beenden)..."
	tail -f logs/bot.log

# Docker
docker-build:
	@echo "ğŸ³ Baue Docker Image..."
	docker build -t tradingbot:latest .

docker-run:
	@echo "ğŸ³ Starte Docker Container..."
	docker run -d \
		--name tradingbot \
		--env-file .env \
		-v $(PWD)/logs:/app/logs \
		-v $(PWD)/data:/app/data \
		tradingbot:latest

docker-stop:
	@echo "â¹ï¸ Stoppe Docker Container..."
	docker stop tradingbot || true
	docker rm tradingbot || true

# Development Helpers
format:
	@echo "ğŸ¨ Formatiere Code..."
	@if command -v black > /dev/null; then \
		black . --line-length 100; \
	else \
		echo "âš ï¸  black nicht installiert: pip install black"; \
	fi

lint:
	@echo "ğŸ” Linting..."
	@if command -v flake8 > /dev/null; then \
		flake8 . --max-line-length=100 --ignore=E203,W503; \
	else \
		echo "âš ï¸  flake8 nicht installiert: pip install flake8"; \
	fi

# Backup & Restore
backup:
	@echo "ğŸ’¾ Erstelle Backup..."
	@mkdir -p backups
	@DATE=$$(date +%Y%m%d_%H%M%S); \
	tar -czf backups/tradingbot_backup_$$DATE.tar.gz \
		--exclude=logs --exclude=__pycache__ --exclude=.git \
		--exclude=backups --exclude=venv .
	@echo "âœ… Backup erstellt in backups/"

# Quick Start fÃ¼r neue Nutzer
quickstart:
	@echo "ğŸš€ TradingBot Quick Start"
	@echo "========================"
	@echo ""
	@echo "1. Setup ausfÃ¼hren..."
	@$(MAKE) setup
	@echo ""
	@echo "2. Validierung..."
	@$(MAKE) validate
	@echo ""
	@echo "3. Test-Backtest..."
	@$(MAKE) backtest
	@echo ""
	@echo "ğŸ‰ Quick Start abgeschlossen!"
	@echo ""
	@echo "NÃ¤chste Schritte:"
	@echo "â€¢ Bearbeite .env mit deinen Alpaca API-Keys"
	@echo "â€¢ Starte Dashboard: make dashboard"
	@echo "â€¢ Live-Trading testen: make live"

# Production Deployment
deploy-systemd:
	@echo "ğŸš€ Erstelle Systemd Service..."
	@USER=$$(whoami); \
	WORKDIR=$$(pwd); \
	echo "[Unit]"; \
	echo "Description=TradingBot Service"; \
	echo "After=network.target"; \
	echo ""; \
	echo "[Service]"; \
	echo "Type=simple"; \
	echo "User=$$USER"; \
	echo "WorkingDirectory=$$WORKDIR"; \
	echo "Environment=PATH=$$WORKDIR/venv/bin"; \
	echo "ExecStart=$$WORKDIR/venv/bin/python main.py --mode live --symbol AAPL"; \
	echo "Restart=always"; \
	echo "RestartSec=10"; \
	echo ""; \
	echo "[Install]"; \
	echo "WantedBy=multi-user.target" \
	> tradingbot.service
	@echo "âœ… Service-Datei erstellt: tradingbot.service"
	@echo ""
	@echo "Installation:"
	@echo "sudo cp tradingbot.service /etc/systemd/system/"
	@echo "sudo systemctl enable tradingbot"
	@echo "sudo systemctl start tradingbot"

# Monitoring
status:
	@echo "ğŸ“Š TradingBot Status"
	@echo "==================="
	@if pgrep -f "main.py" > /dev/null; then \
		echo "ğŸŸ¢ Bot lÃ¤uft (PID: $$(pgrep -f 'main.py'))"; \
	else \
		echo "ğŸ”´ Bot lÃ¤uft nicht"; \
	fi
	@echo ""
	@if [ -f logs/bot.log ]; then \
		echo "ğŸ“ Letzte Log-EintrÃ¤ge:"; \
		tail -n 3 logs/bot.log; \
	fi

# Safety Checks
safety-check:
	@echo "âš ï¸  Sicherheits-Check..."
	@if grep -q "paper-api" .env 2>/dev/null; then \
		echo "âœ… Paper Trading aktiviert"; \
	else \
		echo "ğŸš¨ WARNUNG: Live Trading kÃ¶nnte aktiviert sein!"; \
		echo "   PrÃ¼fe ALPACA_BASE_URL in .env"; \
	fi
	@echo ""
	@python -c "import json; config=json.load(open('config.json')); print('âœ… Max Position Size:', config['risk_management']['max_position_size']); print('âœ… Stop Loss:', config['risk_management']['stop_loss_pct'])"

# Version Information
version:
	@echo "TradingBot v1.0.0"
	@python --version
	@echo "Dependencies:"
	@pip list | grep -E "(alpaca|pandas|scikit|flask)" 2>/dev/null || echo "Keine Trading-Dependencies gefunden"

# All-in-One fÃ¼r CI/CD
ci: install validate test
	@echo "âœ… CI Pipeline erfolgreich!"